{
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": ["standard", "plugin:prettier/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"fetch": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"semi": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"max-len": [
			"error",
			{
				"code": 150,
				"ignoreComments": true,
				"ignoreStrings": true,
				"ignoreUrls": true
			}
		],
		"no-tabs": "off",
		"eol-last": "off",
		"generator-star-spacing": "off",
		"quotes": "warn",
		"comma-dangle": "off"
	}
}
